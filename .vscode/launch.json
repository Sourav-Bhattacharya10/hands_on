                }
            ],
            "args": [],
            "sourceFileMap": {},
            "osx": {
                "MIMode": "lldb"
            }
        },
        {
            "name": "Ubuntu - cargo run -p hands_on",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/hands_on",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
